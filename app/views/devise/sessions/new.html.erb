<div class="wrapper d-flex flex-column justify-content-between">
  <div class="container ">
    <div class="content-aligned py-3 container">
      <span class= "text-center pb-4" style="color:#FFCE34"><h4>GymBuddy</h4></span>
    </div>
    <%= image_tag "login.svg", alt: "user image", class: "login-image" %>
    <div class="form-login">
      <h2>Welcome back!</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "email@email.com",
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      placeholder: "........",
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" , class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
